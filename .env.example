APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
VITE_API_BASE_URL=http://localhost:8000
# VITE_API_WS_URL=ws://localhost:8000/ws/audio
# VITE_DEV_HTTPS=true
# VITE_DEV_HTTPS_KEY=/absolute/path/to/dev-key.pem
# VITE_DEV_HTTPS_CERT=/absolute/path/to/dev-cert.pem

# M9+M10 auth/session + LAN hardening
AUTH_COOKIE_NAME=jst_session
AUTH_SESSION_DAYS=30
AUTH_COOKIE_SECURE=false
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://localhost:5173,https://127.0.0.1:5173
CORS_ALLOW_ORIGIN_REGEX=^https?://(localhost|127\\.0\\.0\\.1|192\\.168\\.\\d+\\.\\d+|10\\.\\d+\\.\\d+\\.\\d+|172\\.(1[6-9]|2\\d|3[0-1])\\.\\d+\\.\\d+)(:\\d+)?$
ALLOWED_HOSTS=localhost,127.0.0.1

# M2+ speech configs
STT_PROVIDER=local_faster_whisper
STT_MODEL_NAME=small
STT_DEVICE=auto
STT_COMPUTE_TYPE=int8
TTS_PROVIDER=auto
TTS_VOICE_JP=Kyoko
TTS_VOICE_EN=Samantha
TTS_PIPER_MODEL=
TTS_SAY_MIXED_LANGUAGE=true
TTS_FORCE_JAPANESE_WHEN_JP_TEXT=true
TTS_MAX_FILES=200
TTS_MAX_AGE_SEC=86400
LLM_PROVIDER=ollama
LLM_MODEL=qwen3:8b
LLM_OLLAMA_BASE_URL=http://127.0.0.1:11434
LLM_TIMEOUT_SEC=90
LLM_TEMPERATURE=0.5
LLM_MAX_HISTORY_TURNS=8
LLM_ENABLE_THINKING=false
LLM_PROMPT_PROFILE_PATH=apps/api/prompt_profile.json
